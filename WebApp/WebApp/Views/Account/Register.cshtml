@model WebApp.Models.ViewModel.ViewRegister
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <section class="content-header">
        <h1>
            Δημιούργησε νέο λογαριασμό.
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
        </ol>
    </section>
    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Βασικές ρυθμίσεις</h3>
                    </div>
                    <div class="form-horizontal">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.aspreg.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.aspreg.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.aspreg.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.aspreg.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.aspreg.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.aspreg.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="stuffreg_stfFullName">Ονοματεπώνυμο</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.stuffreg.stfFullName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="stuffreg_stfFullName">Περιοχή</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.stuffreg.stfLocation, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="stuffreg_stfFullName">Υπηρεσία</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.stuffreg.stfPblSrvc, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Register" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
