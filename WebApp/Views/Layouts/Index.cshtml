@model IEnumerable<WebApp.DevLayout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Layouts
    </h1>

    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Αρχική</a></li>
        <li class="active">Layouts</li>
    </ol>
</section>
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <p>
                        @Html.ActionLink("Δημιουργία Layout", "Create", null, new { @class = "btn bg-green pull-right" })
                    </p>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.dvLtName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dvLtDescription)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.dvLtAutoId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.dvLtAutoId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.dvLtAutoId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

