@model WebApp.DevLayout

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Λεπτομέριες Layout
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Αρχική</a></li>
        <li class="active">Λεπτομέριες Layout</li>
    </ol>
</section>

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                    <div class="form-horizontal">
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    Name :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.dvLtName)
                                </dd>

                                <dt>
                                    Version :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.dvLtVersion)
                                </dd>

                                <dt>
                                    Description :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.dvLtDescription)
                                </dd>

                                <dt>
                                    LastUpdate :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.dvLtLastUpdate)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.dvLtAutoId }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>